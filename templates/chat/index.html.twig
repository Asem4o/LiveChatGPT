{% extends 'bar.html.twig' %}

{% block title %}Chat{% endblock %}

{% block body %}
    <p>Welcome, {{ currentUsername }}!</p>
    <h1>Users for Chat?</h1>

    <ul>
        {% for user in users %}
            <li>
                <a href="{{ path('chat_with_user', {'id': user.id}) }}">{{ user.username }}</a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
