{% extends 'bar.html.twig' %}
{% block body %}

    <div class="container-fluid h-100">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <!-- Chat interface -->
            <div class="col-md-8">
                <div class="chat-container">
                    <div class="chat-header">
                        <h1>Chat with ChatGPT-4-turbo</h1>
                    </div>
                    <div class="chat-window" id="chat-window">
                        {% if result is not null %}
                            <div class="chat-message bot">
                                <div class="message">{{ result|e }}</div>
                            </div>
                        {% elseif query %}
                            <div class="chat-message bot">
                                <div class="message">No results found for "{{ query }}".</div>
                            </div>
                        {% endif %}
                    </div>
                    <form action="{{ path('search') }}" method="get" class="chat-form">
                        <input type="text" name="q" class="form-control" placeholder="Ask me anything..." value="{{ query }}">
                        <button class="btn btn-primary" type="submit">Send</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
